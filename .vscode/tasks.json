{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WeatherForecast.Api/WeatherForecast.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/WeatherForecast.Api/WeatherForecast.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/WeatherForecast.Api/WeatherForecast.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--collect:\"XPlat Code Coverage\"",
                "--results-directory:${workspaceFolder}/WeatherForecast.Tests/coverage",
            ]
        },
        {
            "label": "coverage-report",
            "command": "reportgenerator",
            "type": "process",
            "args": [
                "-reports:\"${workspaceFolder}/WeatherForecast.Tests/coverage/coverage.cobertura.xml\"",
                "-targetdir:\"${workspaceFolder}/WeatherForecast.Tests/coverage/report",
                "-reporttypes:Html"
            ]
        }
    ]
}